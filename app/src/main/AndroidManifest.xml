<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.metricconverter"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme.NoActionBar">
    <activity
      android:name=".activities.BaseActivity"
      android:exported="false" />
    <activity
      android:name=".activities.SettingsActivity"
      android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
      android:screenOrientation="portrait"
      android:exported="false" />
    <activity
      android:name=".activities.TemperatureConverter"
      android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
      android:screenOrientation="portrait"
      android:exported="false" />
    <activity
      android:name=".activities.WeightConverter"
      android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
      android:screenOrientation="portrait"
      android:exported="false" />
    <activity
      android:name=".activities.LengthConverter"
      android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
      android:screenOrientation="portrait"
      android:exported="false" />
    <activity
      android:name=".activities.CurrencyConverter"
      android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
      android:exported="false"
      android:screenOrientation="portrait"
     />
    <activity
      android:name=".activities.MainActivity"
      android:exported="true"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>